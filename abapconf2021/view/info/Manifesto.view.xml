<mvc:View
   controllerName="abapconf.web.abapconf.controller.info.Manifesto"
   xmlns="sap.m"
   xmlns:l="sap.ui.layout"
   xmlns:html="http://www.w3.org/1999/xhtml"
   xmlns:mvc="sap.ui.core.mvc">
   
    <Page id="manifesto" showHeader="false">
        <content>
            <!-- footer -->
            <mvc:XMLView viewName="abapconf.web.abapconf.view.header.Header"/>

            <!-- image -->
            <Image
                src="./img/SAPBall.jpeg"
                mode="Background"
                height="300px"
                width="100%" >
                <layoutData>
                    <FlexItemData growFactor="1" />
                </layoutData>
            </Image>

            <!-- H1 -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox height="100px" alignItems="Center" justifyContent="Center">
                    <Title level="H1" titleStyle="H1" text="{i18n>manifestoH1}"> </Title>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>

            <FlexBox
				height="20px"
				alignItems="Center"
                justifyContent="Center"
                class="sapUiLargeMarginBottom">
                <html:div class="seperator"></html:div>
			</FlexBox>

             <!-- image -->
             <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"                
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <Image
                    src="./img/Binary.jpg"
                    mode="Background"
                    height="250px"
                    width="100%"
                    >
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </Image>
                <html:div class="exampleDiv"/>
            </l:Grid>

            <!-- Slogan -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox height="50px" alignItems="Center" justifyContent="Center">
                    <Title level="H2" titleStyle="H2" text="{i18n>manifestoP1}" class=""></Title>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>

            <FlexBox
				height="20px"
				alignItems="Center"
                justifyContent="Center"
                class="sapUiLargeMarginBottom">
                <html:div class="seperator"></html:div>
			</FlexBox>

            <!-- Text Manifesto -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox alignItems="Center" justifyContent="Start">
                    <Text width="100%" text="{i18n>manifestoP2}" textAlign="Begin"  class="textReadability"></Text>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>

            <!-- Text Manifesto -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox alignItems="Center" justifyContent="Start">
                    <Text width="100%" text="{i18n>manifestoP3}" textAlign="Begin"  class="textReadability"></Text>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>

            <!-- Text Liste -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
               
                <VBox >
                    <Text 
                        width="100%"
                        class="textReadability"
                        text="- {i18n>manifestoP4}"
                    />
                    <Text 
                        width="100%"
                        class="textReadability"
                        text="- {i18n>manifestoP5}"
                    />
                    <Text 
                        width="100%"
                        class="textReadability"
                        text="- {i18n>manifestoP6}"
                    />
                    <Text 
                        width="100%"
                        class="textReadability"
                        text="- {i18n>manifestoP7}"
                    />
                    <Text 
                        width="100%"
                        class="textReadability"
                        text="- {i18n>manifestoP8}"
                    />
                    <Text 
                        width="100%"
                        class="textReadability"
                        text="- {i18n>manifestoP9}"
                    />
                    <Text 
                        width="100%"
                        class="textReadability"
                        text="- {i18n>manifestoP10}"
                    />
                    <Text 
                        width="100%"
                        class="textReadability"
                        text="- {i18n>manifestoP11}"
                    />
                    <Text 
                        width="100%"
                        class="textReadability"
                        text="- {i18n>manifestoP12}"
                    />
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </VBox>
                <html:div class="exampleDiv"/>
            </l:Grid>


            <!-- footer -->
            <mvc:XMLView viewName="abapconf.web.abapconf.view.footer.Footer"/>
        </content>
    </Page>
    
</mvc:View>