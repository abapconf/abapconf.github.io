                    <Title level="H1" titleStyle="H1" text="{i18n>aboutH3}"> </Title>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>
            

            <!-- 3 Text for who -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox alignItems="Center" justifyContent="Start">
                    <Text width="100%" text="{i18n>aboutP3}" textAlign="Begin"  class="textReadability"></Text>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>                
                <html:div class="exampleDiv"/>
            </l:Grid>

            <!-- 3-1 Text for who -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>                
                <HBox alignItems="Center" justifyContent="Start">
                    <Text width="100%" text="{i18n>aboutP31}" textAlign="Begin"  class="textReadability"></Text>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>
            

            
            <!-- 4 Who we are -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox height="100px" alignItems="Center" justifyContent="Center">
                    <Title wrapping="true" level="H1" titleStyle="H1" text="{i18n>aboutH4}"> </Title>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>
            

            <!-- 4 Who we are -->
            <l:Grid
