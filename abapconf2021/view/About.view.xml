                    <Text width="100%" text="{i18n>aboutP4}" textAlign="Begin"  class="textReadability"></Text>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>

            <!-- 2 H2 Motivation -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox height="100px" alignItems="Center" justifyContent="Center">
                    <Title level="H1" titleStyle="H1" text="{i18n>aboutH2}"> </Title>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>

            <!-- 2 Text motivation -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
