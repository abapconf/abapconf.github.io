<mvc:View 
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc"	  
    xmlns="sap.m" 
    xmlns:html="http://www.w3.org/1999/xhtml"
    width="100%"	  
    displayBlock="true"
    controllerName="abapconf.web.abapconf.card.orga.tobias.Main">

    <VBox class="sapUiSmallMargin">

        <Avatar
            src="./card/orga/tobias/TobiasHofmann.png"
            displaySize="Custom"
            customDisplaySize="250px"
            showBorder="false"/>
        <VBox >
            <FlexBox alignItems="Start" justifyContent="SpaceBetween">
                <Label text="{i18n>cardCompany} " labelFor="txtCompanyOrg" /> 
                <Text id="txtCompanyOrg" text="" />
            </FlexBox>
            <FlexBox alignItems="Start" justifyContent="SpaceBetween">
                <Label text="{i18n>cardPosition}" /> 
                <Text text="Architect" />
            </FlexBox>
        </VBox>
    </VBox>
</mvc:View>