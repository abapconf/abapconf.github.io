<mvc:View 
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc"	  
    xmlns="sap.m" 
    xmlns:html="http://www.w3.org/1999/xhtml"
    width="100%"	  
    displayBlock="true"
    controllerName="abapconf.web.abapconf.card.orga.johann.Main">

	<VBox class="sapUiSmallMargin">
        <Avatar
            src="./card/orga/johann/JohannFoessleitner.png"
            displaySize="Custom"
            customDisplaySize="250px"
            showBorder="true"
            press="onPress"/>
        <VBox >
        <FlexBox alignItems="Start" justifyContent="SpaceBetween">
                <Label text="{i18n>cardCompany} " labelFor="txtCompany" /> 
                <Text id="txtCompany" text="Cadaxo GmbH" />
            </FlexBox>
            <FlexBox alignItems="Start" justifyContent="SpaceBetween">
                <Label text="{i18n>cardPosition}" /> 
                <Text text="ABAP Guru" />
            </FlexBox>        
        </VBox>
    </VBox>
</mvc:View>