<mvc:View 
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc"	  
    xmlns="sap.m" 
    xmlns:html="http://www.w3.org/1999/xhtml"
    width="100%"	  
    displayBlock="true"
    controllerName="abapconf.web.abapconf.card.orga.soeren.Main">

    <VBox class="sapUiSmallMargin">
        <Avatar
            src="./card/orga/soeren/SoerenSchlegel.jpg"
            displaySize="Custom"
            customDisplaySize="250px"
            showBorder="true"/>
        <VBox >
            <FlexBox alignItems="Start" justifyContent="SpaceBetween">
                <Label text="{i18n>cardCompany} " labelFor="txtCompany" /> 
                <Text id="txtCompany" text="Brandeis Consulting GmbH" />
            </FlexBox>
            <FlexBox alignItems="Start" justifyContent="SpaceBetween">
                <Label text="{i18n>cardPosition}" /> 
                <Text text="ABAP Guru" />
            </FlexBox>
        </VBox>
    </VBox>
</mvc:View>