<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:tnt="sap.tnt"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc">

    <!-- Agenda filter -->
    <l:Grid
        containerQuery="false"
        defaultSpan="XL2 L2 M12 S12"
        hSpacing="1">
        <html:div class="exampleDiv"/>
        <HBox alignItems="Center" justifyContent="Start">
            <FlexBox direction="Column" alignItems="Start" class="sapUiTinyMarginEnd">
                <Label text="Channels" />
                <ComboBox
                    selectedKey="all"
                    selectionChange="changeAgendaTracks">
                    <core:Item key="track1" text="{i18n>agendaTableHeaderTrack1}" />
                    <core:Item key="track2" text="{i18n>agendaTableHeaderTrack2}" />
                    <core:Item key="track3" text="{i18n>agendaTableHeaderTrack3}" />
                    <core:Item key="all" text="{i18n>agendaFilterAll}" />
                </ComboBox>
            </FlexBox>
            
            <FlexBox direction="Column" alignItems="Start">
                <Label text="{i18n>agendaFilterLanguage}" />
                <ComboBox
                    selectedKey="all"
                    selectionChange="changeAgendaLanguage">
                    <core:Item key="de" text="{i18n>agendaFilterLanguageDE}" />
                    <core:Item key="en" text="{i18n>agendaFilterLanguageEN}" />
                    <core:Item key="all" text="{i18n>agendaFilterAll}" />
                </ComboBox>
            </FlexBox>
            
            <layoutData>
                <l:GridData span="XL8 L8 M12 S12"/>
            </layoutData>
        </HBox>
        <html:div class="exampleDiv"/>
    </l:Grid>
            
    
    <!-- Agenda start morgens -->
    <l:Grid
        containerQuery="false"
        defaultSpan="XL2 L2 M12 S12"     
        visible="{= !${agendaView>/hideTableChannel12} ? true : false}"
        hSpacing="1">
        <html:div class="exampleDiv"/>
        
        <Table
            headerText=""
            >
            <columns>
                <Column 
                    width="3.0rem"
                    hAlign="Begin">
                    <header>
                        <Text wrapping="true" wrappingType="Hyphenated" text="{i18n>agendaTableHeaderTime}" />
                    </header>
                </Column>
                <Column 
                    hAlign="Begin"
                    width="auto"
                    visible="{agendaView>/showTrack1}">
                    <header>
                        <Text wrapping="true" wrappingType="Hyphenated" text="Channel 1" />
                    </header>
                </Column>                
            </columns>

            <!-- registration -->
            <ColumnListItem class="columnSession">
                <Text text="8:00" class="whiteText"/>
                <Text text="{i18n>agendaRegistration}" class="whiteText"/>
            </ColumnListItem>
            <!-- breakfast -->
            <ColumnListItem class="columnSession">
                <Text text="8:00" class="whiteText"/>
                <Text text="{i18n>agendaBreakfast}" class="whiteText"/>
            </ColumnListItem>
            <!-- Willkommen -->
            <ColumnListItem class="columnWelcome"
                press="openSession($event, 'willkommen')">

                <Text text="8:30" class="whiteText"/>
                <VBox class="sapUiSmallMarginBottom sapUiSmallMarginTop" >
                    <Link 
                    class="sapMTitle sapMTitleStyleAuto whiteText keynoteTitle" 
                    wrapping="true" 
                    text="{agenda>/willkommen/title}" 
                    press="openSession($event, 'willkommen')"/>                     
                    <Text 
                        wrapping="true"
                        class="whiteText"
                        textAlign="Begin"
                        text="{agenda>/welcome/abstract}"/>
                    <HBox
                        wrap="Wrap"
                        alignContent="Center"
                        justifyContent="Start">
                        <Link text="Tobias Hofmann" class="whiteText sapUiSmallMargin" press="openSpeaker($event, 'TobiasHofmann')" width=""/>
                        <Link text="Sören Schlegel" class="whiteText sapUiSmallMargin" press="openSpeaker($event, 'SoerenSchlegel')" width=""/>
                        <Link text="Johann Fößleitner" class="whiteText sapUiSmallMargin" press="openSpeaker($event, 'JohannFoessleitner')" width=""/>
                        <Link text="Domi Bigl" class="whiteText sapUiSmallMargin" press="openSpeaker($event, 'DomiBigl')" width=""/>
                    </HBox>
                    <HBox
                        wrap="Wrap"
                        alignContent="Center"
                        justifyContent="Start">
                        <tnt:InfoLabel
                            class="sapUiTinyMarginEnd whiteText"
                            text="Keynote"
                            displayOnly="false"
                            colorScheme= "1" />                                  
                    </HBox>
                    <HBox class="sapUiTinyMarginTop" visible="false">
                        <core:Icon
                            src="sap-icon://calendar"
                            class="sapUiTinyMarginEnd whiteText"
                            color="orange" />
                        <Link 
                            text="{i18n>agendaCalendar}"
                            href="{agenda>/willkommen/ics}"
                            class="whiteText linkCalendar" 
                            textAlign="Center" 
                            wrapping="true"
                            subtle="false" 
                            width="100%"/>
                    </HBox>
                </VBox>
            </ColumnListItem>

            <ColumnListItem class="columnWelcome">
                <Text text="8:45" class="whiteText"/>
                <VBox class="sapUiSmallMarginBottom sapUiSmallMarginTop" >
                    <Link 
                        class="sapMTitle sapMTitleStyleAuto whiteText keynoteTitle" 
                        wrapping="true" 
                        text="{agenda>/welcome/title}" 
                        press="openSession($event, 'welcome')"/>                    
                    <Text 
                        wrapping="true"
                        class="whiteText"
                        textAlign="Begin"
                        text="{agenda>/welcome/abstract}"/>       
                    <HBox
                        wrap="Wrap"
                        alignContent="Center"
                        justifyContent="Start">
                        <Link text="Tobias Hofmann" class="whiteText sapUiSmallMargin" press="openSpeaker($event, 'TobiasHofmann')" width=""/>
                        <Link text="Sören Schlegel" class="whiteText sapUiSmallMargin" press="openSpeaker($event, 'SoerenSchlegel')" width=""/>
                        <Link text="Johann Fößleitner" class="whiteText sapUiSmallMargin" press="openSpeaker($event, 'JohannFoessleitner')" width=""/>
                        <Link text="Domi Bigl" class="whiteText sapUiSmallMargin" press="openSpeaker($event, 'DomiBigl')" width=""/>
                    </HBox>
                    <HBox
                        wrap="Wrap"
                        alignContent="Center"
                        justifyContent="Start">
                        <tnt:InfoLabel
                            class="sapUiTinyMarginEnd whiteText"
                            text="Keynote"
                            displayOnly="false"
                            colorScheme= "1" />                                  
                    </HBox>
                    <HBox class="sapUiTinyMarginTop" visible="false">
                        <core:Icon
                            src="sap-icon://calendar"
                            class="sapUiTinyMarginEnd whiteText"
                            color="orange" />
                        <Link 
                            text="{i18n>agendaCalendar}"
                            href="{agenda>/welcome/ics}"
                            class="whiteText linkCalendar" 
                            textAlign="Center" 
                            wrapping="true"
                            subtle="false" 
                            width="100%"/>
                    </HBox>
                </VBox>
            </ColumnListItem>

            <ColumnListItem class="columnKey">
                <Text text="9:00" class="whiteText"/>
                <VBox class="sapUiSmallMarginBottom sapUiSmallMarginTop">                    
                    <!-- width="{= ${device>/system/phone}? '200%' : '300%'}" -->
                    <Link 
                        class="sapMTitle sapMTitleStyleAuto whiteText keynoteTitle" 
                        wrapping="true" 
                        text="{agenda>/keynote/title}" 
                        press="openSession($event, 'keynote')"/>

                    <!-- 
                       <Title 
                        wrapping="true"   
                        titleStyle="H3"
                        level="H3" 
                        text="{agenda>/keynote/title}"                 
                        class="whiteText"/>                         
                    -->
                    <Text 
                        wrapping="true" 
                        class="whiteText"
                        text="{agenda>/keynote/abstract}"/>
                    <HBox 
                        wrap="Wrap"
                        width="{= ${device>/system/phone}? '200%' : '300%'}" >
                        <Label text="Speakers" class="whiteText sapUiSmallMarginTop"/>
                        
                        <Link text="Stephan Heinberg"  press="openSpeaker($event, 'StephanHeinberg')" class="whiteText sapUiSmallMargin" width="150%"/>
                        
                    </HBox>
                    <HBox
                        wrap="Wrap"
                        alignContent="Center"
                        justifyContent="Start"
                        >
                        <tnt:InfoLabel
                            class="sapUiTinyMargin"
                            text="Keynote"
                            displayOnly="false"
                            colorScheme= "1" />
                        <tnt:InfoLabel
                            class="sapUiTinyMargin"
                            text="ABAP"
                            displayOnly="false"
                            colorScheme= "3" />      
                    </HBox>
                    <HBox class="sapUiTinyMarginTop" visible="false">
                        <core:Icon
                            src="sap-icon://calendar"
                            class="sapUiTinyMarginEnd whiteText"
                            color="orange" />
                        <Link 
                            text="{i18n>agendaCalendar}"
                            href="{agenda>/keynote/ics}"
                            class="whiteText linkCalendar" 
                            textAlign="Center" 
                            wrapping="true"
                            subtle="false" 
                            width="100%"/>
                    </HBox>
                </VBox>                
            </ColumnListItem>
            


            <layoutData>
                <l:GridData span="XL8 L8 M12 S12"/>
            </layoutData>

        </Table>    

        <html:div class="exampleDiv"/>
    </l:Grid>

    <VBox visible="{= !${device>/system/phone}}">
        <core:Fragment id="channelsTabletDesktop" fragmentName="abapconf.2024.org.view.agenda.channels123tabletdesktop" type="XML" />
    </VBox>

    <VBox visible="{= ${device>/system/phone}}">
        <core:Fragment id="channel1mobile" fragmentName="abapconf.2024.org.view.agenda.channel1mobile" type="XML" />
        <core:Fragment id="channel2mobile" fragmentName="abapconf.2024.org.view.agenda.channel2mobile" type="XML" />
        <core:Fragment id="channel3mobile" fragmentName="abapconf.2024.org.view.agenda.channel3mobile" type="XML" />
    </VBox>

    <!-- Agenda closing keynote abends -->
    <l:Grid
        containerQuery="false"
        defaultSpan="XL2 L2 M12 S12"     
        visible="{= !${agendaView>/hideTableChannel12} ? true : false}"
        hSpacing="1">
        <html:div class="exampleDiv"/>
        
        <Table
            headerText=""
            >
            <columns>
                <Column 
                    width="3.0rem"
                    hAlign="Begin">
                    <header >
                        <Text visible="false" wrapping="true" wrappingType="Hyphenated" text="{i18n>agendaTableHeaderTime}" />
                    </header>
                </Column>
                <Column 
                    hAlign="Begin"
                    width="auto"
                    visible="{agendaView>/showTrack1}">
                    <header>
                        <Text visible="false" wrapping="true" wrappingType="Hyphenated" text="Channel 1" />
                    </header>
                </Column>                
            </columns>

            <ColumnListItem class="columnSession">
                <Text text="17:20" class="whiteText"/>
                <Text text="Keynote Channel 1" class="whiteText"/>
            </ColumnListItem>
            

            <ColumnListItem class="columnKey">
                <Text text="17:20" class="whiteText" />
                <VBox class="sapUiSmallMarginBottom sapUiSmallMarginTop" >
                    <Link 
                        class="sapMTitle sapMTitleStyleAuto whiteText keynoteTitle" 
                        wrapping="true" 
                        text="{agenda>/keynote2/title}" 
                        press="openSession($event, 'keynote2')"/>
                    <HBox 
                        wrap="Wrap"
                        width="{= ${device>/system/phone}? '200%' : '300%'}" >
                        <Label text="Speakers:" class="whiteText sapUiSmallMarginTop"/>
                        
                        <Link text="{agenda>/keynote2/speaker}" press="openSpeaker($event, 'BorisGebhardt')" class="whiteText sapUiSmallMargin" width="150%"/>
                        <Link text="{agenda>/keynote2/speaker2}" press="openSpeaker($event, 'JensWeiler')" class="whiteText sapUiSmallMargin" width="150%"/>
                        
                    </HBox>
               
                    <HBox>
                        <Label text="{i18n>agendaDuration}" visible="{= !${device>/system/phone} }" class="whiteText sapUiSmallMarginEnd"/>
                        <Text text="{agenda>/keynote2/duration} Min" class="whiteText" />
                    </HBox>
                    <HBox>
                        <Label text="{i18n>agendaLanguage}" visible="{= !${device>/system/phone} }" class="whiteText sapUiSmallMarginEnd"/>
                        <Text text="{agenda>/keynote2/language}" class="whiteText" />
                    </HBox>
                    <HBox>
                        <tnt:InfoLabel
                            class="sapUiTinyMargin"
                            text="Keynote"
                            displayOnly="false"
                            colorScheme= "1" />
                        <tnt:InfoLabel
                            class="sapUiTinyMargin"
                            text="ABAP"
                            displayOnly="false"
                            colorScheme= "3" />
                    </HBox>
                    <HBox class="sapUiTinyMarginTop">
                        <core:Icon
                            src="sap-icon://calendar"
                            class="sapUiTinyMarginEnd whiteText"/>
                        <Link 
                            text="{i18n>agendaCalendar}"
                            href="./model/agenda/Keynote2.ics"
                            class="linkCalendar whiteText" 
                            textAlign="Center" 
                            wrapping="true"
                            subtle="false" 
                            width="100%"/>
                    </HBox>
                </VBox>
                
            </ColumnListItem>

            
            <!--
            <ColumnListItem>
                <Text text="17:20" />
                <VBox class="sapUiSmallMarginBottom sapUiSmallMarginTop" >
                    <Text text="Meet the speakers" />
                    <HBox class="sapUiTinyMarginTop">
                        <core:Icon
                            src="sap-icon://calendar"
                            class="sapUiTinyMarginEnd"/>
                        <Link 
                            text="{i18n>agendaCalendar}"
                            href="./model/agenda/mts_c1_3.ics"
                            class="linkCalendar" 
                            textAlign="Center" 
                            wrapping="true"
                            subtle="false" 
                            width="100%"/>
                    </HBox>
                </VBox>
                <VBox class="sapUiSmallMarginBottom sapUiSmallMarginTop" >
                    <Text text="Meet the speakers" />
                    
                </VBox>
                <Text text="" />
            </ColumnListItem>
            -->
            <ColumnListItem class="columnPause" >
                <Text text="18:10" class="whiteText"/>
                <Text text="This was the last ABAPConf" class="whiteText"/>
                <Text text="This was the last ABAPConf" class="whiteText"/>
                <Text text="This was the last ABAPConf" class="whiteText"/>
            </ColumnListItem>

           

                        <layoutData>
                <l:GridData span="XL8 L8 M12 S12"/>
            </layoutData>

        </Table>    

        <html:div class="exampleDiv"/>
    </l:Grid>


</core:FragmentDefinition>