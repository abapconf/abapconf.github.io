<mvc:View
   controllerName="abapconf.2024.org.controller.agenda.channel2.Channel2"
   displayBlock="true"
   xmlns="sap.m"
   xmlns:l="sap.ui.layout"
   xmlns:tnt="sap.tnt"
   xmlns:core="sap.ui.core"
   xmlns:html="http://www.w3.org/1999/xhtml"
   xmlns:yt="de.itsfullofstars.yt.controls"
   xmlns:mvc="sap.ui.core.mvc">
   
    <Page id="agendaChannel2" showHeader="false">
        <content>
            <!-- header -->
            <mvc:XMLView viewName="abapconf.2024.org.view.header.Header"/>

             <!-- H1 -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox height="100px" alignItems="Center" justifyContent="Center">
                    <Title level="H1" titleStyle="H1" wrapping="true" text="{i18n>channel2Header}"> </Title>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>

            <FlexBox
				height="20px"
				alignItems="Center"
                justifyContent="Center"
                class="sapUiLargeMarginBottom">
                <html:div class="seperator"></html:div>
			</FlexBox>

            
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox alignItems="Center" justifyContent="Start">
                    <Text width="100%" text="{i18n>channel2Placeholder}" textAlign="Begin"  class="textReadability"></Text>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>

            <!-- YT video placeholder picture-->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL4 L4 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                 <Image
                    src="./img/VideoPlaceholderChannel2.png"
                    mode="Image"
                    press="openYTChannel"
                    height="auto"
                    width="100%" 
                    >
                    <layoutData>
                        <FlexItemData growFactor="1" />
                    </layoutData>
                </Image>

                <html:div class="exampleDiv"/>
            </l:Grid>

            <!-- Agenda start morgens -->
            <core:Fragment id="agendaChannel2agendaMorning" fragmentName="abapconf.2024.org.view.agenda.morning.AgendaMorning" type="XML" />
           
            <!-- Channel 1 -->
            <core:Fragment id="agendaChannel2channe2mobile" fragmentName="abapconf.2024.org.view.agenda.channel2.channel2mobile" type="XML" />        
            
            <!-- Agenda closing keynote abends -->
            <core:Fragment id="agendaChannel2agendaEvening" fragmentName="abapconf.2024.org.view.agenda.evening.AgendaEvening" type="XML" />

            

            <!-- footer -->
            <mvc:XMLView viewName="abapconf.2024.org.view.footer.Footer"/>
        </content>
    </Page>
    
</mvc:View>