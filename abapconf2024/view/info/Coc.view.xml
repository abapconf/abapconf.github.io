<mvc:View
    controllerName="abapconf.2024.org.controller.info.Coc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc">
   
    <Page id="coc" showHeader="false">
        <content>
            <!-- footer -->
            <mvc:XMLView viewName="abapconf.2024.org.view.header.Header"/>

            <!-- image -->
            <Image
                src="./img/SAPBall.jpeg"
                mode="Background"
                height="300px"
                width="100%" >
                <layoutData>
                    <FlexItemData growFactor="1" />
                </layoutData>
            </Image>

            <!-- H1 -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox height="120px" alignItems="Center" justifyContent="Center">
                    <Title level="H1" wrapping="true" wrappingType="Hyphenated" titleStyle="H1" text="{i18n>cocH1}"> </Title>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>

            <FlexBox
				height="20px"
				alignItems="Center"
                justifyContent="Center"
                class="sapUiLargeMarginBottom">
                <html:div class="seperator"></html:div>
			</FlexBox>

            <!-- image -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"                
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <Image
                    src="./img/Rules.png"
                    mode="Image"
                    height="100%"
                    width="100%"
                    >
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </Image>
                <html:div class="exampleDiv"/>
            </l:Grid>

            <!-- H2 -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox height="50px" alignItems="Center" justifyContent="Center">
                    <Title wrapping="true" wrappingType="Hyphenated" level="H2" titleStyle="H2" text="{i18n>cocH2}" class=""></Title>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>

            <!-- Text P1 -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox alignItems="Center" justifyContent="Start">
                    <Text width="100%" text="{i18n>cocTlDr1}" textAlign="Begin"  class="textReadability"></Text>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>
            

            <!-- Text P1 -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox alignItems="Center" justifyContent="Start">
                    <Text width="100%" text="{i18n>cocP1}" textAlign="Begin"  class="textReadability"></Text>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>
           

            <!-- Text P2 -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox alignItems="Center" justifyContent="Start">
                    <Text width="100%" text="{i18n>cocP2}" textAlign="Begin"  class="textReadability"></Text>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>
          

            <!-- H3 UnerwÃ¼nschtes Verhalten -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox height="50px" alignItems="Center" justifyContent="Center">
                    <Title wrapping="true" wrappingType="Hyphenated" level="H2" titleStyle="H2" text="{i18n>cocH3}" class=""></Title>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>
           

            <!-- Text Liste -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <VBox alignItems="Start" justifyContent="Start">
                    <Text width="100%" text="- {i18n>cocP4}" textAlign="Begin"  class="textReadability"></Text>
                    <Text width="100%" text="- {i18n>cocP5}" textAlign="Begin"  class="textReadability"></Text>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </VBox>
                <html:div class="exampleDiv"/>
            </l:Grid>



            <!-- H4 Folgen von inakzeptablem Verhalten -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox height="50px" alignItems="Center" justifyContent="Center">
                    <Title wrapping="true" wrappingType="Hyphenated" level="H2" titleStyle="H2" text="{i18n>cocH4}" class=""></Title>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>

          

            <!-- Text P6 -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox alignItems="Center" justifyContent="Start">
                    <Text width="100%" text="{i18n>cocP6}" textAlign="Begin"  class="textReadability"></Text>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>

            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox alignItems="Center" justifyContent="Start">
                    <Text width="100%" text="{i18n>cocP7}" textAlign="Begin"  class="textReadability"></Text>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>

         

            <!-- footer -->
            <mvc:XMLView viewName="abapconf.2024.org.view.footer.Footer"/>
        </content>
    </Page>
    
</mvc:View>