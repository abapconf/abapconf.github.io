    <Page id="attending" showHeader="false">
        <content>
            <!-- header -->
            <mvc:XMLView viewName="abapconf.2024.org.view.header.Header"/>
           
            <!-- H1 -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox height="100px" alignItems="Center" justifyContent="Center">
                    <Title level="H1" titleStyle="H1" wrapping="true" text="{i18n>attendingTitle}"> </Title>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>

             <!-- Text Desc1 -->
             <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox alignItems="Center" justifyContent="Start">
                    <Text width="100%" text="{i18n>attendingDesc}" textAlign="Begin"  class="textReadability"></Text>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>

            <!-- On-site locations map -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"                
                hSpacing="1"
                class="sapUiLargeMarginTop sapUiSmallMarginBottom">
                <html:div class="exampleDiv"/>
                <Image
                    src="./img/HowToParticipateABAPConf2024Process.png"
                    mode="Image"
                    height="100%"
                    width="100%"
                    >
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </Image>
                <html:div class="exampleDiv"/>
            </l:Grid>
        
