<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc">

    <!-- Register for on site participation via lottery -->
    <l:Grid
        class=""
        defaultSpan="XL2 L2 M12 S12">

        <l:content>

            <html:div class="exampleDiv"/>

            <FlexBox
                direction="Column"
                alignItems="Start"
                justifyContent="Center">

                <FlexBox
                    direction="Column"
                    alignItems="Start"
                    justifyContent="Start"
                    class="sapUiSmallMarginTop">

                    <Title level="Auto" titleStyle="H3" wrapping="true" text="{i18n>homeRegisteronsiteTitle}" />

                </FlexBox>

                <FlexBox
                    direction="Column"
                    alignItems="Start"
                    justifyContent="Start"
                    class="sapUiSmallMarginTop">

                    <Label labelFor="homeRegisteronsiteLinkDesc" wrapping="true" text="{i18n>homeRegisteronsiteDesc}" />
                    <Link id="homeRegisteronsiteLinkDesc" href="#attending" text="{i18n>homeRegisteronsiteLinkDesc}" />

                </FlexBox>

            
                <FlexBox
                    direction="Column"
                    alignItems="Start"
                    justifyContent="Start"
                    class="sapUiLargeMarginTop sapUiLargeMarginBottom">

                    <FlexBox alignItems="Start">
                        <Label width="90px" text="{i18n>homeRegisteronsiteCityMannheim}" class="textReadability sapUiSmallMarginEnd" design="Bold" wrapping="true">
                            <layoutData>
                                <FlexItemData growFactor="1" />
                            </layoutData>
                        </Label>
                        <Link href="https://www.eventbrite.com/e/1011148080127" width="auto" wrapping="true" text="{i18n>homeRegisteronsiteMannheim}" class="textReadability">
                            <layoutData>
                                <FlexItemData growFactor="1" />
                            </layoutData>
                        </Link>
                        
                    </FlexBox>

                    <FlexBox alignItems="Start">
                        <Label width="90px" text="{i18n>homeRegisteronsiteCityVienna}" class="textReadability sapUiSmallMarginEnd" design="Bold" wrapping="true">
                            <layoutData>
                                <FlexItemData growFactor="1" />
                            </layoutData>
                        </Label>
                        <Text text="{i18n>homeRegisteronsiteVienna}"  class="textReadability">
                            <layoutData>
                                <FlexItemData growFactor="1" />
                            </layoutData>
                        </Text>
                        
                    </FlexBox>
                    
                </FlexBox>

                <FlexBox
                    direction="Column"
                    alignItems="Start"
                    justifyContent="Start"
                    class="sapUiSmallMarginTop">

                    <Label text="{i18n>homeRegisterImportant}" class="textReadability" design="Bold" />
                    <Label text="{i18n>homeRegisteronsite}" class="textReadability" wrapping="true" />
                    
                </FlexBox>

                <layoutData>
                    <l:GridData span="XL8 L8 M12 S12"/>
                </layoutData>
            </FlexBox>

            <html:div class="exampleDiv"/>
        </l:content>

    </l:Grid>
</core:FragmentDefinition>