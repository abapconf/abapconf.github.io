<mvc:View
   controllerName="abapconf.2024.org.controller.header.Header"
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:l="sap.ui.layout"
   xmlns:html="http://www.w3.org/1999/xhtml"
   xmlns:mvc="sap.ui.core.mvc">
   

    <HBox
		fitContainer="true"
        alignItems="Center"
        justifyContent="Center"
        height="35px"
		class="DarkBlue">
        <core:HTML content="">
            <core:layoutData>
                <FlexItemData growFactor="1" styleClass="item3" />
            </core:layoutData>
        </core:HTML>
		
        <!-- register -->
        
        <Link text="{i18n>headerRegisterEventbrite}" class="whiteText"  wrapping="true" target="_blank" visible="true" href="https://www.eventbrite.com/e/1009335288017">
            <layoutData>
                <FlexItemData growFactor="1" />
            </layoutData>
        </Link>
        
        <HBox 
            class="DarkBlue" 
            alignItems="Center"
            justifyContent="End"
            >
            <core:Icon            
                src="sap-icon://world"
                press="onSelectLanguage"
                class="sapUiSmallMarginEnd"
                color="white" >

            </core:Icon>                
        </HBox>        
	</HBox>

