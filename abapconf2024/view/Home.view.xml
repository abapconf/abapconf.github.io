<mvc:View
    controllerName="abapconf.2024.org.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:f="sap.f"
	xmlns:w="sap.ui.integration.widgets"  
    >
    
    <Page id="home" title="{i18n>title}" showHeader="false">
        <content>

            <!-- header -->
            <mvc:XMLView viewName="abapconf.2024.org.view.header.Header"/>

            <!-- ABAPConf Werbung -->
            <VBox class="imgBackground" height="900px" visible="{= !${homeView>/live}}">    

                <!-- TITLE -->
                <l:Grid
                    containerQuery="false"
                    defaultSpan="XL2 L2 M12 S12"
                    hSpacing="1">
                    <html:div class="exampleDiv"/>
                    <HBox height="150px" alignItems="Center" justifyContent="Center">
                        <Title level="H1" width="100%" titleStyle="H1" text="{i18n>abapConf} 2024" class="abapconfTitle"></Title>
                        <layoutData>
                            <l:GridData span="XL8 L8 M12 S12"/>
                        </layoutData>
                    </HBox>
                    <html:div class="exampleDiv"/>
                </l:Grid>

                <!-- Subtitle -->                
                <l:Grid
                    containerQuery="false"
                    defaultSpan="XL2 L2 M12 S12"
                    hSpacing="1">
                    <html:div class="exampleDiv"/>
                    <HBox height="100px" alignItems="Center" justifyContent="Center">
                        <Text text="{i18n>homeP1}" textAlign="Center" class="abapconfSubtitle"></Text>
                        <layoutData>
                            <l:GridData span="XL8 L8 M12 S12"/>
                        </layoutData>
                    </HBox>
                    <html:div class="exampleDiv"/>
                </l:Grid>

                <!-- Intro Text -->
                <l:Grid
                    containerQuery="false"
                    defaultSpan="XL4 L3 M12 S12"
                    hSpacing="1">
                    <html:div class="exampleDiv"/>
                    <HBox height="200px" alignItems="Center" justifyContent="Center">
                        <Text width="100%" text="{i18n>homeP2}" textAlign="Center"  class="abapconfSubtitle"></Text>
                        <layoutData>
                            <l:GridData span="XL4 L6 M12 S12"/>
                        </layoutData>
                    </HBox>
                    <html:div class="exampleDiv"/>
                </l:Grid>

                <!-- Short explaination text -->
                <l:Grid
                    containerQuery="false"
                    defaultSpan="XL4 L3 M12 S12"
                    hSpacing="1">
                    <html:div class="exampleDiv"/>
                    <HBox height="200px" alignItems="Center" justifyContent="Center">
                        <Text width="100%" text="{i18n>homeP3}" textAlign="Center"  class="abapconfSubtitle"></Text>
                        <layoutData>
                            <l:GridData span="XL4 L6 M12 S12"/>
                        </layoutData>
                    </HBox>
                    <html:div class="exampleDiv"/>
                </l:Grid>

            </VBox>

            <!-- ABAPConf is live streaming information -->
            <VBox class="imgBackground" height="900px" visible="{= ${homeView>/live} &amp;&amp; !${homeView>/aftergolive} ? true : false }">
                
                <!-- TITLE -->
                <l:Grid
                    containerQuery="false"
                    defaultSpan="XL2 L2 M12 S12"
                    hSpacing="1">
                    <html:div class="exampleDiv"/>
                    <HBox height="150px" alignItems="Center" justifyContent="Center">
                        <Title level="H1" width="100%" titleStyle="H1" text="{i18n>abapConf} 2024" class="abapconfTitle"></Title>
                        <layoutData>
                            <l:GridData span="XL8 L8 M12 S12"/>
                        </layoutData>
                    </HBox>
                    <html:div class="exampleDiv"/>
                </l:Grid>

                
                <l:Grid
                    containerQuery="false"
                    defaultSpan="XL4 L4 M12 S12"
                    hSpacing="1">
                    <html:div class="exampleDiv"/>
                    <VBox height="auto" alignItems="Center" justifyContent="Center">
                        <HBox width="100%" alignItems="Start" justifyContent="SpaceBetween">
                            <Label class="abapconfSubtitle" text="Where: " />
                            <Text class="abapconfSubtitle" text="YouTube" />
                        </HBox>
                        <HBox width="100%" alignItems="Center" justifyContent="SpaceBetween">
                            <Label class="abapconfSubtitle" text="Interact: " />
                            <Text class="abapconfSubtitle" text="YouTube chat " />
                        </HBox>
                        <HBox width="100%" alignItems="Center" justifyContent="SpaceBetween">
                            <Label class="abapconfSubtitle textReadability" text="Hashtag: " />
                            <Text class="abapconfSubtitle" text="#ABAPConf" />
                        </HBox>
                        <HBox width="100%" alignItems="Center" justifyContent="SpaceBetween">
                            <Label class="abapconfSubtitle" text="Links: " />
                            <VBox >
                            <Link width="100%" class="sapUiSmallMarginTopBottom channelLinkHome textReadability" text="YouTube ABAPConf" href="https://www.youtube.com/@abapconf" />
                            <Link width="100%" class="sapUiSmallMarginTopBottom channelLinkHome textReadability" text="Livestream Channel 1" href="{homeView>/channel1}" />
                            <Link width="100%" class="sapUiSmallMarginTopBottom channelLinkHome textReadability" text="Livestream Channel 2" href=" {homeView>/channel2}" />
                            </VBox>
                        </HBox>
                        <layoutData>
                            <l:GridData span="XL4 L4 M12 S12"/>
                        </layoutData>
                    </VBox>
                    <html:div class="exampleDiv"/>
                </l:Grid>
                
            </VBox>


            <!-- ABAPConf is live streaming information -->
            <VBox class="imgBackground" height="900px" visible="{= ${homeView>/live} &amp;&amp; ${homeView>/aftergolive} }">
                
                <!-- TITLE -->
                <l:Grid
                    containerQuery="false"
                    defaultSpan="XL2 L2 M12 S12"
                    hSpacing="1">
                    <html:div class="exampleDiv"/>
                    <HBox height="150px" alignItems="Center" justifyContent="Center">
                        <Title level="H1" width="100%" titleStyle="H1" text="{i18n>abapConf} 2024" class="abapconfTitle"></Title>
                        <layoutData>
                            <l:GridData span="XL8 L8 M12 S12"/>
                        </layoutData>
                    </HBox>
                    <html:div class="exampleDiv"/>
                </l:Grid>

                
                <l:Grid
                    containerQuery="false"
                    defaultSpan="XL4 L4 M12 S12"
                    hSpacing="1">
                    <html:div class="exampleDiv"/>
                    <VBox height="auto" alignItems="Center" justifyContent="Center">
                        <HBox width="100%" alignItems="Start" justifyContent="SpaceBetween">
                            <Text class="abapconfSubtitle" text="{i18n>homeThankYou}" />
                        </HBox>
                        
                        <HBox width="100%" alignItems="Center" justifyContent="SpaceBetween" class="sapUiTinyMarginTop">
                            <Text class="abapconfSubtitle" text="{i18n>homeNextSteps}" />
                        </HBox>

                        <HBox width="100%" alignItems="Center" justifyContent="SpaceBetween" class="sapUiTinyMarginTop">
                            <Text class="abapconfSubtitle" text="{i18n>homeWatchRecordings}" />
                        </HBox>

                        <HBox width="100%" alignItems="Center" justifyContent="SpaceBetween">
                            <Label class="abapconfSubtitle" text="{i18n>homeRecordings}" />
                            <VBox >
                            <Link width="100%" class="sapUiSmallMarginTopBottom channelLinkHome textReadability" text="YouTube ABAPConf" href="https://www.youtube.com/@abapconf" />
                            <Link width="100%" class="sapUiSmallMarginTopBottom channelLinkHome textReadability" text="Livestream Channel 1" href="{homeView>/channel1}" />
                            <Link width="100%" class="sapUiSmallMarginTopBottom channelLinkHome textReadability" text="Livestream Channel 2" href=" {homeView>/channel2}" />
                            </VBox>
                        </HBox>
                        <layoutData>
                            <l:GridData span="XL4 L4 M12 S12"/>
                        </layoutData>
                    </VBox>
                    <html:div class="exampleDiv"/>
                </l:Grid>
                
            </VBox>
            
            <!-- Eyecatcher -->
            <l:Grid
                class="DarkBlue"
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                
                <html:div class="exampleDiv"/>

                <VBox>

                    <l:Grid
                        containerQuery="false"
                        defaultSpan="XL4 L4 M12 S12"
                        hSpacing="1">
                        
                        <HBox 
                            alignItems="Center"
                            justifyContent="Center"
                            class="bgDarkBlue sapUiSmallMarginTop">

                            <FlexBox 
                                height="50px"
                                width="50px"                      
                                alignItems="Center"
                                justifyContent="Center">
                                <core:Icon size="2.5em" src="sap-icon://calendar" />
                            </FlexBox>
                            
                            <VBox class="DarkBlue">
                                <FlexBox height="50px" width="200px" direction="Column" alignItems="Center" justifyContent="SpaceBetween">
                                    <Text class="textColorWhite" text="{i18n>homeOVH1}" />
                                    <Text class="textColorWhite" text="{i18n>homeOVP1}" />
                                </FlexBox>                                
                            </VBox>
                        </HBox>

                        <HBox 
                            alignItems="Center"
                            justifyContent="Center"
                            class="sapUiSmallMarginTop">
                            <FlexBox
                                height="50px"
                                width="50px"
                                alignItems="Center"
                                justifyContent="Center">
                                <core:Icon size="2.5em" src="sap-icon://locate-me" />
                            </FlexBox>
                        
                            <VBox >
                                <FlexBox height="50px" width="200px" direction="Column" alignItems="Center" justifyContent="SpaceBetween">
                                    <Text class="textColorWhite" text="{i18n>homeOVH2}" />
                                    <Text class="textColorWhite" text="{i18n>homeOVP2}" />
                                </FlexBox>
                            </VBox>
                        </HBox>
                    
                        <HBox 
                            alignItems="Center"
                            justifyContent="Center"
                            class="sapUiSmallMarginTop">
                            <FlexBox
                                height="50px"
                                alignItems="Center"
                                justifyContent="Center">
                                <core:Icon size="2.5em" src="sap-icon://money-bills" />                        
                            </FlexBox>
                            
                            <VBox >
                                <FlexBox height="50px" width="200px" direction="Column" alignItems="Center" justifyContent="SpaceBetween">
                                    <Text class="textColorWhite" text="{i18n>homeOVH3}" />
                                    <Text class="textColorWhite" text="{i18n>homeOVP3}" />
                                </FlexBox>                                
                            </VBox>
                        </HBox>
                        
                    </l:Grid>

                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </VBox>

                <html:div class="exampleDiv"/>

            </l:Grid>



            <!-- Sponsors -->

            <FlexBox
                height="100px"
                alignItems="Center"
                justifyContent="Center">
                <Title level="H2" titleStyle="H2" text="{i18n>abapConfSponsors}"> </Title>
            </FlexBox>

            <!-- Sponsor company logos -->
            <l:Grid
                class=""
                defaultSpan="XL2 L2 M12 S12"
                vSpacing="2"
                hSpacing="1">

                <l:content>

                    <html:div class="exampleDiv"/>

                    <FlexBox 
                        height="80px"
                        class="sapUiLargeMarginEnd sapUiSmallMarginTop" 
                        alignItems="Center"
                        justifyContent="Center">
                        <Image decorative="false" src="img/BrandeisConsultingLogo.svg" width="250px" press="navToBrandeis"></Image>
                        <layoutData>
                            <l:GridData span="XL3 L3 M12 S12"/>
                        </layoutData>
                    </FlexBox>

                    <FlexBox 
                        height="80px"
                        class="sapUiLargeMarginEnd sapUiSmallMarginTop" 
                        alignItems="Center"
                        justifyContent="Center" >
                        <Image decorative="false" src="img/cadaxo.png" width="100%" press="navToCadaxo">
                            <layoutData>
                                <l:GridData span="XL2 L2 M12 S12"/>
                            </layoutData>
                        </Image>
                    </FlexBox>

                    <FlexBox 
                        height="80px"
                        class="sapUiSmallMarginTop" 
                        alignItems="Center"
                        justifyContent="Center" >
                        <Image decorative="false" src="img/S4FITLogo.png" width="100%" height="40px" press="navToS4Fit">
                            <layoutData>
                                <l:GridData span="XL3 L3 M12 S12"/>
                            </layoutData>
                        </Image>
                    </FlexBox>

                    <html:div class="exampleDiv"/>
                </l:content>

            </l:Grid>

            <!-- Sponsor thank you message -->
            <l:Grid
                class=""
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                vSpacing="2"
                hSpacing="1">

                <l:content>

                    <html:div class="exampleDiv"/>

                    <FlexBox
                        class="sapUiLargeMarginBottom sapUiSmallMarginEnd sapUiSmallMarginBegin"
                        alignItems="Center"
                        justifyContent="Center">
                        <Text text="{i18n>abapConfSponsorsText}"> </Text>
                        <layoutData>
                            <l:GridData span="XL8 L8 M12 S12"/>
                        </layoutData>
                    </FlexBox>

                    <html:div class="exampleDiv"/>
                </l:content>

            </l:Grid>


             <!-- ABAPConf Title -->
            <FlexBox
				height="100px"
				alignItems="Center"
                justifyContent="Center">
				<Title level="H2" titleStyle="H2" text="{i18n>abapConf}"> </Title>
			</FlexBox>

            <!-- seperator -->
            <FlexBox
				height="20px"
				alignItems="Center"
                justifyContent="Center"
                class="sapUiTinyMarginBottom">
                <html:div class="seperator"></html:div>
			</FlexBox>


            <!-- Register at eventbrite -->
            <l:Grid
                class=""
                defaultSpan="XL2 L2 M12 S12">

                <l:content>
                    <html:div class="exampleDiv"/>

                    <FlexBox
                        alignItems="Center"
                        justifyContent="Center">
                        <Link text="{i18n>homeRegisterEventbrite}" class="textReadability  " wrapping="true" target="_blank" href="https://www.eventbrite.com/e/1009335288017"/>
                        <layoutData>
                            <l:GridData span="XL8 L8 M12 S12"/>
                        </layoutData>
                    </FlexBox>

                    <html:div class="exampleDiv"/>
                </l:content>

            </l:Grid>
            

            <!-- Register for on site participation via lottery -->
            <l:Grid
                class=""
                defaultSpan="XL2 L2 M12 S12">

                <l:content>

                    <html:div class="exampleDiv"/>

                    <FlexBox
                        direction="Column"
                        alignItems="Start"
                        justifyContent="Center">

                        <FlexBox
                            direction="Column"
                            alignItems="Start"
                            justifyContent="Start"
                            class="sapUiSmallMarginTop">

                            <Title level="Auto" titleStyle="H3" text="{i18n>homeRegisteronsiteTitle}" />

                        </FlexBox>

                        <FlexBox
                            direction="Column"
                            alignItems="Start"
                            justifyContent="Start"
                            class="sapUiLargeMarginTop sapUiLargeMarginBottom">

                            <FlexBox alignItems="Start">
                                <Label width="100px" text="{i18n>homeRegisteronsiteCityMannheim}" class="textReadability sapUiLargeMarginEnd" design="Bold" wrapping="true">
                                    <layoutData>
                                        <FlexItemData growFactor="1" />
                                    </layoutData>
                                </Label>
                                <Link href="https://www.eventbrite.com/e/1011148080127" text="{i18n>homeRegisteronsiteMannheim}" class="textReadability">
                                    <layoutData>
                                        <FlexItemData growFactor="1" />
                                    </layoutData>
                                </Link>
                                
                            </FlexBox>

                            <FlexBox alignItems="Start">
                                <Label width="100px" text="{i18n>homeRegisteronsiteCityVienna}" class="textReadability sapUiLargeMarginEnd" design="Bold" wrapping="true">
                                    <layoutData>
                                        <FlexItemData growFactor="1" />
                                    </layoutData>
                                </Label>
                                <Link href="" text="{i18n>homeRegisteronsiteVienna}" enabled="false" class="textReadability">
                                    <layoutData>
                                        <FlexItemData growFactor="1" />
                                    </layoutData>
                                </Link>
                                
                            </FlexBox>
                            
                        </FlexBox>

                        <FlexBox
                            direction="Column"
                            alignItems="Start"
                            justifyContent="Start"
                            class="sapUiSmallMarginTop">

                            <Label text="{i18n>homeRegisterImportant}" class="textReadability" design="Bold" />
                            <Text text="{i18n>homeRegisteronsite}" class="textReadability" wrapping="true" />

                        </FlexBox>
 
                        <layoutData>
                            <l:GridData span="XL8 L8 M12 S12"/>
                        </layoutData>
                    </FlexBox>

                    <html:div class="exampleDiv"/>
                </l:content>

            </l:Grid>
            
            <!-- seperator -->
            <FlexBox
				height="20px"
				alignItems="Center"
                justifyContent="Center"
                class="sapUiTinyMarginBottom">
                <html:div class="seperator"></html:div>
			</FlexBox>
            

            <!-- Points 1, 2, 3 -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                class="sapUiLargeMarginTop"
                hSpacing="1">
                
                <html:div class="exampleDiv"/>

                <VBox>

                    <l:Grid
                        containerQuery="false"
                        defaultSpan="XL4 L4 M12 S12"
                        hSpacing="1">

                        <VBox class="sapUiLargeMarginEnd" >
                            <HBox height="50px" class="sapUiSmallMarginBottom">
                                <core:Icon size="1.5em" src="sap-icon://information" class="sapUiTinyMarginEnd"  />
                                <Title level="H3" titleStyle="H3" text="{i18n>homeBPH1}" wrapping="true"> </Title>
                            </HBox>
                            <Text width="auto" text="{i18n>homeBP1}" />
                        </VBox>

                        <VBox class="sapUiLargeMarginEnd">
                            <HBox height="50px" class="sapUiSmallMarginBottom">
                                <core:Icon size="1.5em" src="sap-icon://sys-help-2" class="sapUiTinyMarginEnd"  />
                                <Title level="H3" titleStyle="H3" text="{i18n>homeBPH2}" wrapping="true"> </Title>
                            </HBox>
                            <Text width="auto" text="{i18n>homeBP2}" />
                        </VBox>

                        <VBox class="sapUiLargeMarginEnd">
                            <HBox height="50px" class="sapUiSmallMarginBottom">
                                <core:Icon size="1.5em" src="sap-icon://favorite" class="sapUiTinyMarginEnd"  />
                                <Title level="H3" titleStyle="H3" text="{i18n>homeBPH3}" wrapping="true"> </Title>
                            </HBox>
                            <Text width="auto" text="{i18n>homeBP3}" />
                        </VBox>

                    </l:Grid>

                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </VBox>

                <html:div class="exampleDiv"/>

            </l:Grid>

            <!-- Points 4, 5, 6 -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                
                <html:div class="exampleDiv"/>

                <VBox>

                    <l:Grid
                        containerQuery="false"
                        defaultSpan="XL4 L4 M12 S12"
                        hSpacing="1">
                        
                        <VBox class="sapUiLargeMarginEnd" >
                            <HBox
                                class="sapUiSmallMarginBottom"
                                height="50px"      >
                                <core:Icon size="1.5rem" src="sap-icon://business-card" class="sapUiTinyMarginEnd"  />
                                <Title level="H3" titleStyle="H3" text="{i18n>homeBPH4}" wrapping="true"> </Title>
                            </HBox>
                            <Text width="auto" text="{i18n>homeBP4}" />
                        </VBox>
                        <VBox class="sapUiLargeMarginEnd" >
                            <HBox
                                class="sapUiSmallMarginBottom"
                                height="50px">
                                <core:Icon size="1.5em" src="sap-icon://study-leave" class="sapUiTinyMarginEnd"  />
                                <Title level="H3" titleStyle="H3" text="{i18n>homeBPH5}" wrapping="true"> </Title>
                            </HBox>
                            <Text width="auto" text="{i18n>homeBP5}" />
                        </VBox>
                        <VBox class="sapUiLargeMarginEnd" >
                            <HBox
                                class="sapUiSmallMarginBottom"
                                height="50px">
                                <core:Icon size="1.5em" src="sap-icon://away" class="sapUiTinyMarginEnd"  />
                                <Title level="H3" titleStyle="H3" text="{i18n>homeBPH6}" wrapping="true"> </Title>
                            </HBox>
                            <Text width="auto" text="{i18n>homeBP6}" />
                        </VBox>
                        
                    </l:Grid>

                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </VBox>

                <html:div class="exampleDiv"/>

            </l:Grid>

            
            <!--
            agenda
            -->           
            <!--
            <mvc:XMLView viewName="abapconf.2024.org.view.agenda.AgendaHome"/>
            --> 
            <!-- FAQ -->
            <!-- H1 -->
            <l:Grid
                containerQuery="false"
                defaultSpan="XL2 L2 M12 S12"
                hSpacing="1">
                <html:div class="exampleDiv"/>
                <HBox height="150px" alignItems="Center" justifyContent="Center">
                    <Title level="H1" wrapping="true" wrappingType="Normal" textAlign="Center" titleStyle="H1" text="{i18n>faqH1}"> </Title>
                    <layoutData>
                        <l:GridData span="XL8 L8 M12 S12"/>
                    </layoutData>
                </HBox>
                <html:div class="exampleDiv"/>
            </l:Grid>

            <FlexBox
				height="20px"
				alignItems="Center"
                justifyContent="Center"
                class="sapUiLargeMarginBottom">
                <html:div class="seperator"></html:div>
			</FlexBox>

            <!-- FAQ -->
            <core:Fragment fragmentName="abapconf.2024.org.view.info.FAQ" type="XML" />

            

            <!-- Meet the orga team -->
            <FlexBox
				height="100px"                
				alignItems="Center"
                justifyContent="Center">
				<Title level="H2" titleStyle="H2" text="{i18n>orgaTeamMeet}"> </Title>
			</FlexBox>

            <FlexBox
				height="20px"
				alignItems="Center"
                justifyContent="Center"
                class="sapUiLargeMarginBottom ">
                <html:div class="seperator"></html:div>
			</FlexBox>

            <!-- Orga Team -->
            <core:Fragment fragmentName="abapconf.2024.org.view.orga.People" type="XML" />

            <!-- Note text -->
            <FlexBox
                alignItems="Start"
                justifyContent="Center">
                <Text 
                    text="{i18n>homeP4}"/>
            </FlexBox>
            
            
    
            <!-- footer -->
            <mvc:XMLView viewName="abapconf.2024.org.view.footer.Footer"/>
        </content>
    </Page>
</mvc:View>