<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc">

    <FlexBox
        height="100px"
        alignItems="Center"
        justifyContent="Center">
        <Title level="H2" titleStyle="H2" text="{i18n>abapConfSponsors}"> </Title>
    </FlexBox>

    <!-- Sponsor company logos Brandeis Cadaxo -->
    <l:Grid
        class=""
        defaultSpan="XL2 L2 M12 S12"
        vSpacing="2"
        hSpacing="1">

        <l:content>

            <html:div class="exampleDiv"/>

            <FlexBox 
                height="80px"
                class="sapUiLargeMarginEnd sapUiSmallMarginTop" 
                alignItems="Center"
                justifyContent="Center">
                <Image decorative="false" src="img/BrandeisConsultingLogo.svg" width="250px" press="navToBrandeis"></Image>
                <layoutData>
                    <l:GridData span="XL4 L4 M12 S12"/>
                </layoutData>
            </FlexBox>

            <FlexBox 
                height="80px"
                class="sapUiLargeMarginEnd sapUiSmallMarginTop" 
                alignItems="Center"
                justifyContent="Center" >
                <Image decorative="false" src="img/cadaxo.png" width="100%" press="navToCadaxo">
                    <layoutData>
                        <l:GridData span="XL4 L4 M12 S12"/>
                    </layoutData>
                </Image>
            </FlexBox>

            <!--
            <FlexBox 
                height="80px"
                class="sapUiSmallMarginTop" 
                alignItems="Center"
                justifyContent="Center" >
                <Image decorative="false" src="img/S4FITLogo.png" width="100%" height="40px" press="navToS4Fit">
                    <layoutData>
                        <l:GridData span="XL3 L3 M12 S12"/>
                    </layoutData>
                </Image>
            </FlexBox>
            -->

            <html:div class="exampleDiv"/>
        </l:content>

    </l:Grid>

    <!-- Sponsor company logos Espresso Tutorials S4FIT -->
    <l:Grid
        class=""
        defaultSpan="XL2 L2 M12 S12"
        vSpacing="2"
        hSpacing="1">

        <l:content>

            <html:div class="exampleDiv"/>

            <FlexBox 
                height="80px"
                class="sapUiLargeMarginEnd sapUiSmallMarginTop" 
                alignItems="Center"
                justifyContent="Center">
                <Image decorative="false" src="img/espresso-tutorials-logo.svg" width="250px" press="navToEspressoTutorials"></Image>
                <layoutData>
                    <l:GridData span="XL4 L4 M12 S12"/>
                </layoutData>
            </FlexBox>

            <FlexBox 
                height="80px"
                class="sapUiSmallMarginTop" 
                alignItems="Center"
                justifyContent="Center" >
                <Image decorative="false" src="img/S4FITLogo.png" width="100%" height="40px" press="navToS4Fit">
                    <layoutData>
                        <l:GridData span="XL4 L4 M12 S12"/>
                    </layoutData>
                </Image>
            </FlexBox>
            

            <html:div class="exampleDiv"/>
        </l:content>

    </l:Grid>

    <!-- Sponsor thank you message -->
    <l:Grid
        class=""
        containerQuery="false"
        defaultSpan="XL2 L2 M12 S12"
        vSpacing="2"
        hSpacing="1">

        <l:content>

            <html:div class="exampleDiv"/>

            <FlexBox
                class="sapUiLargeMarginBottom sapUiSmallMarginEnd sapUiSmallMarginBegin"
                alignItems="Center"
                justifyContent="Center">
                <Text text="{i18n>abapConfSponsorsText}"> </Text>
                <layoutData>
                    <l:GridData span="XL8 L8 M12 S12"/>
                </layoutData>
            </FlexBox>

            <html:div class="exampleDiv"/>
        </l:content>

    </l:Grid>
</core:FragmentDefinition>