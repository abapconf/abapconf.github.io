<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc">
   
    <!-- Text about -->
    <l:Grid
        containerQuery="false"
        defaultSpan="XL2 L2 M12 S12"
        hSpacing="1">
        <html:div class="exampleDiv"/>
        <HBox alignItems="Center" justifyContent="Start">
            <Text width="100%" text="{i18n>agendaP2sample}" textAlign="Begin"  class="textReadability"></Text>
            <layoutData>
                <l:GridData span="XL8 L8 M12 S12"/>
            </layoutData>
        </HBox>
        <html:div class="exampleDiv"/>
    </l:Grid>
        
    <!-- Sample Agenda -->
            
    <l:Grid
        containerQuery="false"
        defaultSpan="XL2 L2 M12 S12"
        hSpacing="1">
        <html:div class="exampleDiv"/>
        
        <Table
            headerText="Agenda">
            <columns>
                <Column 
                    hAlign="Begin">
                    <header>
                        <Text text="{i18n>agendaTableHeaderTime}" />
                    </header>
                </Column>
                <Column 
                    hAlign="Begin">
                    <header>
                        <Text wrapping="true" wrappingType="Hyphenated" text="{i18n>agendaTableHeaderTrack1}" />
                    </header>
                </Column>
                <Column
                    hAlign="Begin" >
                    <header>
                        <Text wrapping="true" wrappingType="Hyphenated" text="{i18n>agendaTableHeaderTrack2}" />
                    </header>
                </Column>                
            </columns>
            <ColumnListItem class="columnKey">
                <ObjectNumber number="9:00" class="whiteText"/>
                <Text text="Welcome" class="whiteText"/>
                <Text text="Welcome" class="whiteText"/>
            </ColumnListItem>
            <ColumnListItem class="columnKey" span="2">
                <ObjectNumber number="9:15" class="whiteText"/>
                <VBox >
                    <Title 
                        wrapping="false"    
                        titleStyle="H3"
                        level="H3" 
                        text="Keynote" 
                        class="whiteText"/>
                    <Text text="Welcome to ABAPConf 2021. Introduction to the conference, motivation and agenda. Get to know the people and how to get the best out of the day." wrapping="true" class="whiteText"/>
                    <HBox>
                        <Label text="Speakers" class="whiteText sapUiSmallMarginTop"/>
                        <Link text="Tobias Hofmann" class="whiteText sapUiSmallMargin" press="openSpeaker($event, 0)" width="150%"/>
                        <Link text="Sören Schlegel" class="whiteText sapUiSmallMargin" press="openSpeaker($event, 1)" width="150%"/>
                        <Link text="Johann Fößleitner" class="whiteText sapUiSmallMargin" press="openSpeaker($event, 2)" width="150%"/>
                    </HBox>
                    <HBox
                        wrap="Wrap"
                        alignContent="Center"
                        justifyContent="Start"
                        >
                        <tnt:InfoLabel
                            class="sapUiTinyMargin"
                            text="Keynote"
                            displayOnly="false"
                            colorScheme= "1" />
                        <tnt:InfoLabel
                            class="sapUiTinyMargin"
                            text="ABAP"
                            displayOnly="false"
                            colorScheme= "3" />      
                    </HBox> 
                </VBox>
            </ColumnListItem>
            <ColumnListItem class="columnPause">
                <ObjectNumber number="9:55" class="whiteText"/>
                <Text text="{i18n>agendaTablePause}" class="whiteText"/>
                <Text text="{i18n>agendaTablePause}" class="whiteText" />
                <Text text="{i18n>agendaTablePause}" class="whiteText" />
            </ColumnListItem>
            <ColumnListItem highlight="Indication05">
                <ObjectNumber number="10:00" />
                <Text text="Session" />
                <Text text="Session" />
                <Text text="Introduction" />
            </ColumnListItem>                
            <ColumnListItem highlight="Indication03">
                <ObjectNumber number="10:45" />
