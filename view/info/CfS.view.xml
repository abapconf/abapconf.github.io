<mvc:View
    controllerName="abapconf.2023.org.controller.info.CfS"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc">
   
    <Page id="cfs" showHeader="false">
        <content>
            <!-- footer -->
            <mvc:XMLView viewName="abapconf.2023.org.view.header.Header"/>


            <!-- CfS not startet yet -->
            <core:Fragment id="cfsPrep" fragmentName="abapconf.2023.org.view.info.CfSprep" type="XML" />
            
            <!-- CfS is running
            <core:Fragment id="cfsOpen" fragmentName="abapconf.2023.org.view.info.CfSopen" type="XML" />
            -->            
            <!-- CfS closed 
            <core:Fragment id="cfsClosed" fragmentName="abapconf.2023.org.view.info.CfSclosed" type="XML" />
            -->

            <!-- footer -->
            <mvc:XMLView viewName="abapconf.2023.org.view.footer.Footer"/>
        </content>
    </Page>
    
</mvc:View>