<mvc:View
   controllerName="abapconf.2023.org.controller.speakers.SpeakersTable"
   xmlns="sap.m"
   xmlns:m="sap.m"
   displayBlock="true"
   xmlns:l="sap.ui.layout"
   xmlns:tnt="sap.tnt"
   xmlns:mvc="sap.ui.core.mvc">
   
    <!-- speaker directory -->

    <l:VerticalLayout id="speakerVerticalLayout" width="100%">
		<l:BlockLayout 
            id="speakerBlockLayout" 
            background="Dashboard" 
            content="{speakersTable>/}">
			<l:BlockLayoutRow 
                content="{
                    path: 'speakersTable>',
                    templateShareable:false
                }">

				<l:BlockLayoutCell > 
                    <FlexBox
                        direction="Column"
                        alignItems="Center"
                        >
                        <Avatar
                            src="{speakersTable>picture}"
                            displaySize="Custom"
                            customDisplaySize="250px"
                            displayShape="Square"
                            press="openSpeakerDetail"/>
                        <FlexBox
                            height="50px"
                            alignItems="Center"
                            justifyContent="Center">
                            <Title text="{speakersTable>firstname} {speakersTable>lastname}" />
                        </FlexBox>
                    </FlexBox>
                    
				</l:BlockLayoutCell>				

			</l:BlockLayoutRow>		
		</l:BlockLayout>
	</l:VerticalLayout>
    
</mvc:View>